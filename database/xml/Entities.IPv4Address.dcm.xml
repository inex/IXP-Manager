<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Entities\IPv4Address" repository-class="Repositories\IPv4Address" table="ipv4address" tableName="ipv4address">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <field name="address" type="string" length="16" nullable="true"/>
    <unique-constraints>
      <unique-constraint name="vlan_address" columns="vlanid,address"/>
    </unique-constraints>
    <field name="created_at" type="datetime" nullable="true"/>
    <field name="updated_at" type="datetime" nullable="true"/>
    <many-to-one field="Vlan" target-entity="Entities\Vlan" inversed-by="IPv4Addresses">
      <join-columns>
        <join-column name="vlanid" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <one-to-one field="VlanInterface" target-entity="Entities\VlanInterface" mapped-by="IPv4Address"/>
  </entity>
</doctrine-mapping>
