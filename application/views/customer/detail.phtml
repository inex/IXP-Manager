    <ul class="breadcrumb">
        <li>
            <a href="{genUrl}">Home</a> <span class="divider">/</span>
        </li>
        <li>
            <a href="{genUrl controller="customer" action="details"}">Customer Details</a> <span class="divider">/</span>
        </li>
        <li class="active">
